patches-own [
  r  ;; growth rate
  k  ;; carying capacity
  q  ;; actual quantity 0 -100
]

to patches-setColor 
  ask patches [
    set pcolor  scale-color green q 1 100 ]
end

to patches-update
  set production 0
  ask patches [
    set production production + (r * q / k)
    set q  (q + (r * q / k))
  ]
  
  diffuse q diff-rate
  ask patches[
    if q > k [
      set q k
    ]
  ]
  patches-setColor
end